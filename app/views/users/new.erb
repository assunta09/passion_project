<div id="registration_container">
    <div class="headline-container">
        <h1>Hidden Places</h1>
        <h2>Register to Create your own Travel-Log</h2>
    </div>

	<form class="form_container" action='/users' method="POST">
        <div class="form_entries">
            <label class="label-container">Name</label>
            <input type="text" name="user[name]">
        </div>
        <div class="form_entries">
            <label class="label-container">Email Address</label>
            <input type="text" name="user[email]">
        </div>
        <div class="form_entries">
            <label class="label-container">Password</label>
            <input type="password" name="user[password]">
        </div>
        <div class="form_entries">
            <label class="label-container">Confirm Password</label>
            <input type="password" name="password_confirmation">
        </div>
        <div class="submit-button">
            <input type="submit" name="Register">
        </div>
	</form>

</div>
